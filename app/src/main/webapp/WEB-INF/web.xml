<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Crud Application</display-name>
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>crud.app.MainServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PersonOps</servlet-name>
    <servlet-class>crud.app.PersonOps</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PersonDetails</servlet-name>
    <servlet-class>crud.app.PersonDetails</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RoleDetails</servlet-name>
    <servlet-class>crud.app.RoleDetails</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RoleOps</servlet-name>
    <servlet-class>crud.app.RoleOps</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>crud/app/MainServlet</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>PersonOps</servlet-name>
    <url-pattern>crud/app/PersonOps</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>PersonDetails</servlet-name>
    <url-pattern>crud/app/PersonDetails</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>RoleDetails</servlet-name>
    <url-pattern>crud/app/RoleDetails</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RoleOps</servlet-name>
    <url-pattern>crud/app/RoleOps</url-pattern>
  </servlet-mapping>
</web-app>
